// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  slug        String
  description String
  url         String   @unique
  date        DateTime
  platform    String
  language    String
  categoryId  String   @db.ObjectId
  category    Category @relation(fields: [categoryId], references: [id])
  tags        Tags[]   @relation(fields: [tagId], references: [id])
  tagId       String[] @db.ObjectId
  thumbnail   String
}

model Category {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  value String
  label String
  blogs Blog[]
}

enum Language {
  marathi
  english
  hindi
}

model Tags {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  value  String
  label  String
  blogId String[] @db.ObjectId
  blogs  Blog[]   @relation(fields: [blogId], references: [id])
}

model Genre {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  label       String  @unique
  value       String
  description String
  books       Book[]
  parent      Genre?  @relation("GenreParent", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentId    String? @db.ObjectId
  children    Genre[] @relation("GenreParent")
}

model Author {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  value  String
  label  String
  bookId String[] @db.ObjectId
  books  Book[]   @relation(fields: [bookId], references: [id])
}

model Book {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  review   String
  authors  Author[] @relation(fields: [authorId], references: [id])
  authorId String[] @db.ObjectId
  genreId  String   @db.ObjectId
  genre    Genre    @relation(fields: [genreId], references: [id])
  status   String
  own      String
  date     DateTime
}
